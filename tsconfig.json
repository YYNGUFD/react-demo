{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths":{
      "src":["src"],
      "@style":["src/style"],
      "@service":["src/service"],
      "@service/*":["src/service/*"],
      "@views/*":["src/views/*"],
      "@account":["src/views/account"],
      "@account/*":["src/views/account/*"],
      "@note":["src/views/note"],
      "@note/*":["src/views/note/*"],
      "@category":["src/views/category"],
      "@category/*":["src/views/category/*"],
      "@utils":["src/utils"], 
      "@utils/*":["src/utils/*"],
    },
    "baseUrl":".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react", 
  },
  "include": [
    "src"
  ],

}
